{
  "name": "selenium-ui-test-boilerplate",
  "version": "1.0.0",
  "description": "Minimal Selenium UI test setup with logging and screenshots - A quick-start boilerplate for web automation testing",
  "main": "index.js",
  "scripts": {
    "test": "HEADLESS=true jest --detectOpenHandles --forceExit --silent",
    "test:fast": "HEADLESS=true jest --detectOpenHandles --forceExit --silent --maxWorkers=2",
    "test:headed": "HEADED=true jest --detectOpenHandles --forceExit --silent",
    "test:headless": "HEADLESS=true jest --detectOpenHandles --forceExit --silent",
    "test:chrome": "BROWSER=chrome HEADLESS=true jest --detectOpenHandles --forceExit --silent",
    "test:firefox": "BROWSER=firefox HEADLESS=true jest --detectOpenHandles --forceExit --silent",
    "test:verbose": "jest --detectOpenHandles --forceExit --verbose",
    "test:debug": "HEADED=true jest --detectOpenHandles --forceExit --verbose --runInBand",
    "demo": "node demo/demo.js",
    "setup": "node utils/setup.js",
    "clean": "rm -rf screenshots/*.png logs/*.log test-results/*.xml || true",
    "clean:all": "npm run clean && rm -rf node_modules package-lock.json",
    "update": "npm outdated && npm update",
    "audit": "npm audit --audit-level moderate"
  },
  "keywords": [
    "selenium",
    "webdriver",
    "ui-testing",
    "automation",
    "testing",
    "qa",
    "screenshots",
    "logging"
  ],
  "author": "QA Engineer",
  "license": "MIT",
  "dependencies": {
    "jest": "^30.0.5",
    "selenium-webdriver": "^4.27.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@jest/test-sequencer": "^30.0.5",
    "@types/jest": "^30.0.0",
    "jest-junit": "^16.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kiefertaylorland/selenium-ui-boilerplate.git"
  }
}
